version 36
__lua__
ship={}

function _init()
 ship.x=64 
 ship.y=64
 ship.v=1.15
 ship.a=0.25
 ship.l=4
 ship.s=1
end

function _update()
 if (btn(0)) ship.x-=ship.v
 if (btn(1)) ship.x+=ship.v
 if (btn(2)) ship.y-=ship.v
 if (btn(3)) ship.y+=ship.v
 if (btn(4)) ship.a+=0.03
 if (btn(5)) ship.a-=0.03
 
end

function _draw()
 cls()
 
 spr(ship.s,ship.x-3,ship.y-2)
 line(ship.x,ship.y,
      ship.x+cos(ship.a)*ship.l,
      ship.y+sin(ship.a)*ship.l)
end
